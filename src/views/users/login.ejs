<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <!-- icons -->
    <%- include('../partials/icons') %>

    <!-- header -->
    <%- include('../partials/header') %>

    <div class="bg-light text-dark" style="padding: 5em 0;">
        <div class="container px-3 mx-auto">
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10 px-3">
                    <div class="row rounded shadow bg-white">
                        <div class="col-md-5 px-0">
                            <img src="/images/main-background.jpg" class="img-fluid w-100 h-100 rounded-start" alt="login-image" style="object-fit: cover;">
                        </div>
                        <div class="col-md-7 p-4 p-md-5">
                            <div class="d-flex justify-content-between">
                                <div class="w-60 text-start">
                                    <h3 class="mb-4">INICIA SESIÓN</h3>
                                </div>
                                <div class="w-40 text-end ">
                                    <a href="#" class="">
                                    <svg class="me-1 me-sm-2" width="30px" height="30px" fill="gray">
                                        <use xlink:href="#facebook">
                                    </svg></a>
                                    <a href="#" class="">
                                    <svg class="me-1 me-sm-2" width="30px" height="30px" fill="gray">
                                        <use xlink:href="#google">
                                    </svg></a>
                                </div>
                            </div>
                            <form action="/users/login" method="POST" id="loginForm">
                                <div class="mt-3">
                                    <label for="loginInputEmail" class="form-label fw-bold">Email</label>
                                    <input type="email" class="form-control <%= locals.errors ? 'is-invalid' : null %>" id="loginInputEmail" placeholder="ejemplo@gmail.com" name="email">
                                  </div>
                                  <div class="mt-3">
                                    <label for="loginInputPassword" class="form-label fw-bold">Contraseña</label>
                                    <input type="password" class="form-control <%= locals.errors ? 'is-invalid' : null %>" id="loginInputPassword" placeholder="********" name="password">
                                  </div>
                                  <div class="text-danger mt-3"><ul id="loginErrors"></ul></div>
                                  <% if (locals.errors && errors.email) { %>
                                    <div class="text-danger">
                                        <%= errors.email.msg %> 
                                    </div>
                                <% } %>
                                  <button type="submit" class="btn btn-warning w-100 mt-3">INICIAR SESION</button>
                                  <div class="mt-3 d-flex">
                                    <div class="w-50 text-start form-check">
                                        <input type="checkbox" class="form-check-input bg-warning border-0" id="exampleCheck1" name="remember" checked>
                                        <label class="form-check-label text-secondary" for="exampleCheck1">Recuérdame</label>
                                    </div>
                                    <div class="w-50 text-end ">
                                        <a href="#" class="text-decoration-none text-secondary">¿Olvidaste tu clave?</a>
                                    </div>
                                  </div>
                                  <p class="text-center text-secondary mt-3">
                                    No tienes cuenta? 
                                    <a href="/users/register" class="text-decoration-none text-secondary fw-bold">Registrate!</a>
                                  </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- footer -->
    <%- include('../partials/footer') %>
</body>
<script src="/js/loginValidation.js"></script>
</html>