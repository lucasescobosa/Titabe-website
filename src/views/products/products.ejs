<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/main-style.css"> 
</head>

<body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
  crossorigin="anonymous"></script>
    <!-- icons -->
    <%- include('../partials/icons') %>
    <!-- header -->
    <%- include('../partials/header') %>

        <main>
            <div class="container-xl text-center my-3">
                <!-- contenedor principal -->
                <div class="row">
                  <div class="col-12 col-xl-3">
                    <!-- category-navigation -->
                    
                    <div class="flex-shrink-0 p-3 bg-dark" style="width: 280px; height: 100%;">
                      <a href="/" class="d-flex align-items-center pb-3 mb-3 link-light text-decoration-none border-bottom">
                        <svg class="bi pe-none me-2" width="30" height="24" fill="white">
                          <use xlink:href="#fire"/>
                        </svg>
                        <span class="fs-5 fw-semibold">Categorías</span>
                      </a>
                      <ul class="list-unstyled ps-0 text-start">
                        <li class="mb-1">
                          <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed"
                            data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="true">
                            Productos
                          </button>
                          <div class="collapse show" id="home-collapse">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small text-start">
                              <li><a href="/products/subcategory/1" class="link-light d-inline-flex text-decoration-none rounded">Leñeros/Braseros/Diablitos</a></li>
                              <li><a href="/products/subcategory/2" class="link-light d-inline-flex text-decoration-none rounded">Parrillas</a></li>
                              <li><a href="/products/subcategory/3" class="link-light d-inline-flex text-decoration-none rounded">A la Cruz</a></li>
                              <li><a href="/products/subcategory/4" class="link-light d-inline-flex text-decoration-none rounded">Fogoneros</a></li>
                              <li><a href="/products/subcategory/5" class="link-light d-inline-flex text-decoration-none rounded">Asadores</a></li>
                              <li><a href="/products/subcategory/6" class="link-light d-inline-flex text-decoration-none rounded">Discos</a></li>
                              <li><a href="/products/subcategory/7" class="link-light d-inline-flex text-decoration-none rounded">Accesorios</a></li>
                              <li><a href="/products/subcategory/8" class="link-light d-inline-flex text-decoration-none rounded">Tablas</a></li>
                            </ul>
                          </div>
                        </li>
                        <li class="mb-1">
                          <button class="btn btn-toggle d-inline-flex align-items-center rounded border-0 collapsed"
                            data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
                            Servicios
                          </button>
                          <div class="collapse show" id="dashboard-collapse">
                            <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                              <li><a href="/products/subcategory/9" class="link-light d-inline-flex text-decoration-none rounded">Alquileres</a></li>
                              <li><a href="/products/subcategory/10" class="link-light d-inline-flex text-decoration-none rounded">Grabados</a></li>
                            </ul>
                          </div>
                        </li>
                        <li class="border-top my-3"></li>
                      </ul>
                    </div>
        
                  </div>
                  <div class="col col-xl-9">
                    <!-- articles -->
        
                    <div class="row">
                      <% for (product of products) { %>
                        <div class="col-xl-4 col-md-6 col-12 mb-4">
                          <div class="card text-bg-light h-100">
                            <% if (product.offer === 1) { %>
                              <div class="card-header">
                                Oferta
                              </div>
                            <% } %>
                            <img src="/images/products/<%= product.products_images[0].name %>" class="card-img-top w-100" alt="product-image" height="300px" style="object-fit: contain;">
                            <div class="card-body text-start">
                              <h4 class="card-title">
                                <%= product.name %>
                              </h4>
                              <h6 class="card-subtitle mb-2 text-muted">
                                <%= product.descriptionShort %>
                              </h6>
                              <h2 class="card-text">$<%= toThousand(product.price) %>
                              </h2>
                              <a href="/products/detail/<%= product.id %>" class="stretched-link"></a>
                              <% if (product.stock === 1) { %>
                                <a href="#" class="btn btn-warning ">Agregar al carrito</a>
                              <% } else { %>
                                <a href="#" class="btn btn-warning disabled">Producto sin stock</a>
                              <% } %> 
                            </div>
                          </div>
                        </div>
                        <% } %>
                    </div>
                  </div>
                </div>
              </div>
        </main>

        <!-- footer -->
        <%- include('../partials/footer') %>

</body>

</html>