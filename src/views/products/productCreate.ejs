<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../partials/head') %>
        </head>

    <body>
        <!-- icons -->
        <%- include('../partials/icons') %>
        <!-- header -->
        <%- include('../partials/headerSimple') %>

        <div class="bg-light text-dark" style="padding: 5em 0;">
            <div class="container px-3 mx-auto">
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-10 px-3">
                        <div class="row rounded shadow bg-white">
                            <div class="col-md-5 p-0">
                                <img src="/images/fire.jpg" class="img-fluid w-100 h-100 rounded-start"
                                    alt="product-image" style="object-fit: cover;">
                            </div>
                            <div class="col-md-7 p-4 p-md-5">
                                <div class="d-flex justify-content-between">
                                    <div class="w-100 text-start">
                                        <h3 class="mb-4">Agregar nuevo producto</h3>
                                    </div>
                                </div>
                                <form action="/products/" method="POST" enctype="multipart/form-data" class="edit-form">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" placeholder="Nombre del producto" name="productName">
                                        <label for="floatingInput">Nombre del producto</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="floatingInput" placeholder="Descripción breve" name="productDescriptionShort">
                                        <label for="floatingInput">Descripción breve</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <textarea class="form-control" placeholder="Descripción detallada" name="productDescriptionLong" id="floatingTextarea2" style="height: 100px"></textarea>
                                        <label for="floatingTextarea2">Descripción detallada</label>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">$</span>
                                        <div class="form-floating">
                                          <input type="number" class="form-control" id="floatingInputGroup1" placeholder="Precio" name="productPrice">
                                          <label for="floatingInputGroup1">Precio</label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-floating">
                                          <select class="form-select" id="floatingSelectGrid" name="productCategory">
                                            <option selected>cat1</option>
                                            <option value="1">cat1</option>
                                            <option value="2">cat2</option>
                                            <option value="3">cat3</option>
                                            <option value="3">cat4</option>
                                            <option value="3">cat5</option>
                                            <option value="3">cat6</option>
                                            <option value="3">cat7</option>
                                            <option value="3">cat8</option>
                                            <option value="3">cat9</option>
                                            <option value="3">cat10</option>
                                          </select>
                                          <label for="floatingSelectGrid">Categoría</label>
                                        </div>
                                    </div>
                                    <div class="mb-5">
                                        <label for="formFile" class="form-label  fw-bold">Foto del producto</label>
                                        <input class="form-control" type="file" id="formFile" name="productImage">
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <button type="submit" class="btn btn-warning" style="width:45%">ENVIAR</button>
                                        <button type="reset" class="btn btn-danger" style="width:45%">BORRAR</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <!-- footer -->
            <%- include('../partials/footer') %>

    </body>

</html>