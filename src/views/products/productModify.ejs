<!DOCTYPE html>
<html lang="en">

    <head>
        <%- include('../partials/head') %>
        </head>

    <body>
        <!-- icons -->
        <%- include('../partials/icons') %>
        <!-- header -->
        <%- include('../partials/headerSimple') %>

        <div class="bg-light text-dark" style="padding: 5em 0;">
            <div class="container px-3 mx-auto">
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-10 px-3">
                        <div class="row rounded shadow bg-white">
                            <div class="col-md-5 pl-3">
                                <img src="/images/products/<%= product.products_images[0].name %>" class="img-fluid w-100 rounded-start"
                                    alt="product-image" style="object-fit: cover;">
                            </div>
                            <div class="col-md-7 p-4 p-md-5">
                                <div class="d-flex justify-content-between">
                                    <div class="w-100 text-start">
                                        <h3 class="mb-4">Editando: <%=product.name%></h3>
                                    </div>
                                </div>
                                <form action="/products/<%=product.id%>?_method=PUT" method="POST" class="edit-form">
                                    <div class="mb-3">
                                        <label for="exampleInput1" class="form-label fw-bold">Nombre del producto</label>
                                        <input type="text" class="form-control" id="exampleInput1" name="productName" value="<%=product.name%>">
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInput2" class="form-label fw-bold">Descripción breve</label>
                                        <input type="text" class="form-control" id="exampleInput2" value="<%= product.descriptionShort%>" name="productDescriptionShort">
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleFormControlTextarea1" class="form-label fw-bold">Descripción detallada</label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" value=" " name="productDescriptionLong"><%= product.descriptionLong%></textarea>
                                    </div>
                                    <div class="row g-2">
                                        <div class="col-md">
                                            <div class="mb-3">
                                                <label for="exampleNumber" class="form-label fw-bold">Precio</label>
                                                <div class="input-group">
                                                    <span class="input-group-text">$</span>
                                                    <input type="number" class="form-control" id="exampleNumber" value="<%= product.price %>" name="productPrice">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md">
                                            <div class="mb-3">
                                                <label for="exampleNumber" class="form-label fw-bold">Descuento</label>
                                                <div class="input-group">
                                                    <input type="number" class="form-control" id="exampleNumber" value="<%= product.discount %>" name="productDiscount">
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row g-2">
                                        <div class="col-md">
                                            <div class="mb-3">
                                                <label for="exampleSelect" class="form-label fw-bold">Categoría</label>
                                                <select class="form-select" id="exampleSelect" name="productCategory">
                                                    <option selected value="<%= product.subcategory_id %>">
                                                        <% for( subcategory of subcategories ) { %>
                                                            <% if (subcategory.id === product.subcategory_id) { %>
                                                                <% for( category of categories ) { %>
                                                                    <% if (subcategory.category_id === category.id) { %>
                                                                        <%=category.name %> 
                                                                    <% } %>
                                                                <% } %>
                                                            <% } %>
                                                        <% } %>
                                                    </option>
                                                    <% for( category of categories ) { %>
                                                        <option value="<%= category.id %>"><%= category.name %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md">
                                            <div class="mb-3">
                                                <label for="exampleSelect" class="form-label fw-bold">Subcategoría</label>
                                                <select class="form-select" id="exampleSelect" name="productSubcategory">
                                                    <option selected value="<%= product.subcategory_id %>">
                                                        <% for( subcategory of subcategories ) { %>
                                                            <% if (subcategory.id === product.subcategory_id) { %>
                                                                <%=subcategory.name %> 
                                                            <% } %>
                                                        <% } %>
                                                    </option>
                                                    <% for( subcategory of subcategories ) { %>
                                                        <option value="<%= subcategory.id %>"><%= subcategory.name %></option>
                                                    <% } %>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <label for="formFile" class="form-label  fw-bold">Fotos del producto</label>
                                        <div class="input-group mb-2">
                                            <input class="form-control" type="file" id="formFile" name="productImageMain">
                                            <label class="input-group-text" for="inputGroupFile01">Portada</label>
                                        </div>
                                        <div class="input-group">
                                            <input class="form-control" type="file" id="formFile" name="productImages" multiple>
                                            <label class="input-group-text" for="inputGroupFile01">Otras</label>
                                        </div>
                                    </div>
                                    <div class="form-check form-switch mb-4">
                                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="productStock" <% if (product.stock === 1) { %>checked<% } %>>
                                        <label class="form-check-label fw-bold" for="flexSwitchCheckChecked">Producto en Stock</label>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <button type="submit" class="btn btn-warning" style="width:45%">ENVIAR</button>
                                        <button type="reset" class="btn btn-danger" style="width:45%">BORRAR</button>
                                    </div>
                                    
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <!-- footer -->
            <%- include('../partials/footer') %>

    </body>

</html>